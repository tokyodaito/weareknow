<resources>
    <!-- Base application theme. -->
    <style name="Theme.Weareknow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!--  fragment_settings  -->
    <style name="DeleteButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/delete_button_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>